{
    "name": "functions",
    "description": "Cloud Functions for Firebase",
    "scripts": {
        "serve": "firebase emulators:start",
        "shell": "firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log",
        "test": "jest",
        "test:unit": "jest tests/unit",
        "test:unit:watch": "jest --watch --detectOpenHandles --slowTestThreshold=10 tests/unit",
        "test:integration": "jest tests/integration",
        "test:integration:watch": "jest --watch --detectOpenHandles --slowTestThreshold=10 tests/integration/attri*",
        "test:watch": "jest --watch --detectOpenHandles --slowTestThreshold=10",
        "emulators": "firebase emulators:start --only firestore,auth"
    },
    "engines": {
        "node": "22"
    },
    "main": "index.js",
    "dependencies": {
        "body-parser": "^1.20.3",
        "dotenv": "^16.4.7",
        "firebase-admin": "^12.6.0",
        "firebase-functions": "^6.0.1",
        "joi": "^17.13.3",
        "lodash": "^4.17.21",
        "twilio": "^5.4.2"
    },
    "devDependencies": {
        "firebase-functions-test": "^3.1.0",
        "jest": "^29.7.0"
    },
    "private": true
}
